<div class="container_12">
  <div class="grid_8 push_2">
    <div class="feature_icon">
      <%= image_tag ("sign_in.svg") %>
    </div>
    <p class="pg_title"> sign in </p>
  </div>
  <div class="grid_6 push_3">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :email, :class => "form_title" %><br />
      <%= f.email_field :email, :class => "form_field", :autofocus => true %></div>

      <div><%= f.label :password, :class => "form_title" %><br />
      <%= f.password_field :password, :class => "form_field" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "form_title" %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "submit_btn" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
