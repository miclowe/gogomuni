<h1>New Transit</h1>
<h3>pick from below</h3>

<%= form_for @transit do |f| %>
  <div class="field">
    <%= f.label :route_id %><br />
    <%= f.collection_select :route_id, Route.order(:r_title), :id, :r_title, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :direction_id %><br />
    <%= f.grouped_collection_select :direction_id, Route.order(:r_title), :directions, :id, :id, :d_title, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :stop_id %><br />
    <%= f.grouped_collection_select :stop_id, Direction.order(:d_title), :stops, :id, :id, :s_title, include_blank: true %>
  </div>
  <div class="field">
    When do you want to start getting alerted?
    <%= f.time_select :start_time, {:ampm => true} %><br />
  </div>
  <div class="field">
    For how long?:
    <%= f.text_field :end_time %><br />
  </div>
  <div class="field">
    I need to leave <%= f.text_field :buffer %> minutes before the Muni arrives.
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>

